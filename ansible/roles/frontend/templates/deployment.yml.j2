apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ deployment_name }}
  namespace: {{ namespace_name }}
  labels:
    {{ labels | to_nice_yaml | indent(4) | trim }}
spec:
  replicas: {{ replicas }}
  selector:
    matchLabels:
      app: {{ labels.app }}
  template:
    metadata:
      labels:
        app: {{ labels.app }}
        tier: frontend
    spec:
      containers:
        - name: {{ app_name }}-container
          image: {{ image }}
          imagePullPolicy: Always
          ports:
            - containerPort: {{ container_port }}
          env:
            - name: VITE_API_KEY
              valueFrom:
                secretKeyRef:
                  name: frontend-api-secret
                  key: API_KEY
          resources:
            requests:
              cpu: "{{ resources.requests.cpu }}"
              memory: "{{ resources.requests.memory }}"
            limits:
              cpu: "{{ resources.limits.cpu }}"
              memory: "{{ resources.limits.memory }}"
