apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: {{ hpa_name }}
  namespace: {{ namespace_name }}
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: {{ deployment_name }}
  minReplicas: {{ hpa_min_replicas }}
  maxReplicas: {{ hpa_max_replicas }}
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: {{ hpa_target_cpu_utilization_percentage }}
